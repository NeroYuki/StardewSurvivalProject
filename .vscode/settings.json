{
    // C# Development Settings
    "dotnet.defaultSolution": "StardewSurvivalProject.sln",
    
    // File exclusions for better performance
    "files.exclude": {
        "**/bin": true,
        "**/obj": true
    },
    
    // Search exclusions
    "search.exclude": {
        "**/bin": true,
        "**/obj": true
    },
    
    // Editor settings
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": "never",
        "source.organizeImports": "never"
    },
    
    // C# specific settings
    "[csharp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    }
}
